profiles {
  docker {
    docker.temp = 'auto'
    docker.enabled = true
    process {
      withname: index_fasta {
        container = "bowtie2:2.3.4.1"
      }
    }
  }
  psmn {
    process{
      withname: index_fasta {
        beforeScript = "module purge; module load Bowtie2/2.3.4.1"
      }
    }
  }
}
