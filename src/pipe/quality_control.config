// configuration option for the quality_control.nf Pipeline

params {
  // quality_control.nf config
  params.name = "quality control analysis"
  params.fastqc = "/usr/local/bin/fastqc"
  params.multiqc = "/usr/local/bin/multiqc"
  params.urqt = "/usr/local/bin/UrQt"
  params.trimmomatic = "/usr/bin/trimmomatic"
  params.cutadapt = "/usr/local/bin/cutadapt"
}

process {
    $get_file_name {
      executor = ${params.global_executor}
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
    }
    $fastqc {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
    $adaptor_removal {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
    $trimming {
      executor = ${params.global_executor}
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
    }
    $fastqc_trimmed {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
    $multiqc {
      executor = "local"
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
    $get_pigz_version {
    executor = "local"
      cpus = 1
      memory = "1GB"
      time = "1h"
    }
    $get_gzip_version {
    executor = "local"
      cpus = 1
      memory = "1GB"
      time = "1h"
    }
}
