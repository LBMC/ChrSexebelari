// configuration option for the quality_control.nf Pipeline

params {
  // quality_control.nf config
  name = "quality control analysis"
  fastqc = "fastqc"
  fastqc_version = "0.11.5"
  multiqc = "multiqc"
  multiqc_version = "1.0"
  urqt = "UrQt"
  urqt_version = "d62c1f8"
  file_handle = "file_handle.py"
  file_handle_version = "0.1.1"
  cutadapt = "cutadapt"
  python2_version = "2.7"
  python3_version = "3.5"
  nextflow_version = "0.25.1"
}

process {
    $get_file_name {
      executor = ${params.global_executor}
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
      queue = 'E5-2670deb128*, E5-2670deb256*'
      penv = 'mpi16_debian ${params.cpu}'
    }
    $fastqc {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $adaptor_removal {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $trimming {
      executor = ${params.global_executor}
      cpus = ${params.cpu}
      memory = "2GB"
      time = "10h"
      queue = 'E5-2670deb128*, E5-2670deb256*'
      penv = 'mpi16_debian ${params.cpu}'
    }
    $fastqc_trimmed {
      executor = ${params.global_executor}
      cpus = 1
      memory = "2GB"
      time = "10h"
      queue = 'monointeldeb128, E5-2667v2h6deb128, E5-2667v2d2deb128'
    }
    $multiqc {
      executor = "local"
      cpus = 1
      memory = "2GB"
      time = "10h"
    }
}
